<InputLogin@MDTextField>:
    size_hint: 1, None
    height: '60dp'
    multiline: False
    helper_text_mode: "on_error"

<LoginForm@MDBoxLayot>:
    orientation: 'vertical'
    MDLabel:
        color: 'orange'
        halign: 'center'
        text: 'Login'
        bold: True
        font_size: 28
    MDSeparator:
        height: '1dp'
    MDBoxLayout:
        InputLogin:
            hint_text: 'Usuario'
            id: Usuario
            helper_text: 'Usuario inválido'
    MDBoxLayout:
        InputLogin:
            hint_text: 'Senha'
            id: Senha
            icon_left: 'key-variant'
            password: True
            helper_text: 'Senha inválida'
    MDFillRoundFlatButton:
        size_hint: 1, None
        height: '70dp'
        text: '[b][color=#ffffff]Entrar[/color][/b]'
        on_release: root.login_validation(app)

<Login@MDCard>:
    orientation: 'vertical'
    elevation: 20
    radius: [25, 25, 25, 25]
    size_hint: None, None
    size: '400px', '360px'
    pos_hint: {"center_x": .5, "center_y": .5}
    FitImage:
        source: 'Images/login.png'
        radius: 25, 25, 0, 0
        size_hint: 1, 0.37
    LoginForm:
        id: form
        spacing: 1
        padding: (100, 20)
